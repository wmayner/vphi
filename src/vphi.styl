@import url('http://fonts.googleapis.com/css?family=Droid+Sans+Mono|Open+Sans:300,400,700')
base_font = 'Open Sans', 'Helvetica Neue', 'Helvetica'
mono_font = 'Droid Sans Mono', 'Monaco', 'Menlo', 'Courier New', monospace
@import "styles/colors"
@import "styles/tetromino"

node_radius = 18

body
  font-family base_font
  padding-top 50px
  background sol_background

.module-title
  margin 0 0 25px 0

.control-panel
  .control-label
    font-size 120%
    padding-top 10px
    padding-bottom 10px

ul#possible-past-states
  font-size 120%
  font-family mono_font
  text-align center

#past-state-chooser
  text-align center
  #selected-past-state
    font-family mono_font
  span.caret
    margin-left 15px


#graph-editor-module
  height 700px

#concept-space-module
  height 700px

#graph-editor-container, #concept-space-container
  margin-bottom 25px

#concept-space-container
  position relative

#concept-space-overlay
  z-index 10
  display block
  position absolute
  height 100%
  top 0
  left 0
  right 0
  background rgba(255, 255, 255, 0.3)

.btn-primary
  background sol_cyan

.control-panel
  margin 10px 0 10px 0

#btn-calculate
  width 175px

#output-phi
  opacity 1
  font-size 130%
  font-weight bold
  width 150px
  letter-spacing .25ex

canvas, svg
  border 1px solid #ccc
  border-radius 5px

svg
  background #000
  cursor default
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  -o-user-select none
  user-select none
  &:not(.active):not(.shiftkey)
    cursor crosshair
    path
      &.link
        cursor pointer

path.link
  fill none
  stroke edge_color
  stroke-width 5px
  cursor default
  opacity 0.7
  &.selected
    stroke-dasharray 10, 3
  &.dragline
    pointer-events none
  &.hidden
    stroke-width 0

.arrow-head
  fill edge_color

circle.node
  stroke-width 1.5px
  cursor pointer
  &.reflexive
    stroke #444 !important
    stroke-width 3.5px

text
  font 14px 'Helvetica Neue', sans-serif
  pointer-events none
  &.node-label
    text-anchor middle
    &.id
      font 16px 'Helvetica Neue', sans-serif
      font-weight bold

.row-centered
  text-align center

.col-centered
  display inline-block
  float none
  // reset the text-align
  text-align left
  // inline-block space fix
  margin-right -4px
