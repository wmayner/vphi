@import url('http://fonts.googleapis.com/css?family=Droid+Sans+Mono|Open+Sans:300,400,700')
base_font = 'Open Sans', 'Helvetica Neue', 'Helvetica'
mono_font = 'Droid Sans Mono', 'Monaco', 'Menlo', 'Courier New', monospace

body
  font-family base_font
  padding-top 50px
  background sol_background

.row-centered
  text-align center

.col-centered
  display inline-block
  float none
  // reset the text-align
  text-align left
  // inline-block space fix
  margin-right -4px

.module-title
  text-align center
  margin 0 0 25px 0

.control-panel
  .control-label
    font-size 120%
    padding-top 10px
    padding-bottom 10px

#concept-space-module, #graph-editor-module
  min-height 700px

#main-control-module
  padding 5px 0 25px 0

#graph-editor-container, #concept-space-container
  margin-bottom 25px

.btn-primary
  background sol_cyan

.control-panel
  margin 10px 0 10px 0

#btn-calculate
  width 175px

#output-phi
  opacity 1
  text-align center
  font-size 130%
  font-weight bold
  width 175px
  letter-spacing .25ex

canvas, svg
  border-radius 5px

svg
  cursor default
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  -o-user-select none
  user-select none

@import "colors"
@import "graph-editor"
@import "concept-space"
@import "concept-list"
@import "tetromino"
