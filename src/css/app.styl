@import url('http://fonts.googleapis.com/css?family=Droid+Sans+Mono|Open+Sans:300,400,700')
base_font = 'Open Sans', 'Helvetica Neue', 'Helvetica'
mono_font = 'Droid Sans Mono', 'Monaco', 'Menlo', 'Courier New', monospace

@import "colors"

html::-webkit-scrollbar
  display none

body
  margin-top 50px
  padding-top 40px
  font-family base_font
  background sol_background

.bold
  font-weight bold

.modal
  margin-top 50px

span.keyboard
  font-weight bold
  border 1px solid #ccc
  border-radius 3px
  padding 0.5px 6px

.row-centered
  text-align center

.col-centered
  display inline-block
  float none
  //- Reset the text-align.
  text-align left
  //- Inline-block space fix.
  margin-right -4px

.module-title
  font-size 160%
  text-align center
  margin 0 0 15px 0

section
  margin-bottom 15px
  margin-top 10px
  .module-title
    margin-bottom 25px

.number-2
  width 3em

.number-7
  width 6em

.number-2, .number-7
  background sol_background
  border 1px solid #ddd
  border-radius 5px
  padding 6px 10px
  text-align center
  display inline-block

.node-list
  display inline-block
  padding 0
  margin 5px 8px
  > li
    display inline-block
    margin 3px
    padding 0.3ex 1ex
    color sol_background
    background sol_cyan
    border 1px solid darken(sol_cyan, 5)
    border-radius 5px

.btn-primary
  background sol_cyan

.vphi-label
  display inline-block
  font-size 120%
  text-align right
  margin 5px 15px 5px 0

canvas, svg
  border-radius 5px

svg
  cursor default
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  -o-user-select none
  user-select none

@import "graph-editor"
@import "concept-space"
@import "main-control"
@import "output-summary"
@import "concept-list"
@import "tetromino"
