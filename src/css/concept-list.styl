// concept-list.styl

#concept-list-module
  text-align center

  h3
    margin-bottom 35px

  .repertoire-container
    margin-bottom 15px

  .repertoire-title
    font-weight normal

  .mechanism
    font-size 150%
    margin 0

  .small-phi
    [class^=number]
      width 100px
      letter-spacing 0.2ex

  ul.concept-data
    padding 0
    font-size 80%
    > li
      list-style-type none
      margin-bottom 25px
    [class^=number]
      font-size 110%

    .math-output
      display inline-block
      font-size 150%
      text-align center
      margin 1ex 0 1.5ex 0

    .small-phi-mips
      .spacer
        margin 0 10px
