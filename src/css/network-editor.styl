// network-editor.styl

network-editor
  display block

#network-editor-help
  ul
    padding-top 0
    li
      margin 7px 0

#network-editor-container
  margin-bottom 15px

#network-editor-module
  padding-bottom 10px

  .control-group
    float left
    @media (max-width: md_max) {
      float none
    }

#past-state-panel
  margin-bottom 15px

//- phone
@media (max-width: phone_max) {
  #past-state-dropdown, #no-past-states {
    width 100%
  }
}

ul#past-states,
  text-align center
  margin-top 13px
  font-family mono_font

#past-state-chooser
  font-family mono_font
  text-align center
  #current-past-state
    display inline-block
  #past-states
    text-align center

.dropdown-toggle
  span.caret
    margin-left 1ex

#no-past-states
  opacity 1
  background lighten(sol_red, 80%)

#network-editor-module

  svg
    &:not(.active):not(.shiftkey)
      cursor crosshair
      path
        &.link
          cursor pointer

  path.link
    fill none
    stroke-width 6px
    cursor default
    opacity 0.7
    &.focused
      opacity 1
    &.dragline
      pointer-events none
    &.hidden
      stroke-width 0

  circle.node
    stroke none
    cursor pointer
    &.reflexive
      stroke sol_background !important

  circle.subsystem-marker
    stroke none
    stroke sol_background
    stroke-width 2px
    stroke-dasharray 7
    fill none

  circle.neighbor-circle
    stroke-width 2
    stroke sol_blue
    opacity 0.75
    fill none

  text
    font 12px 'Helvetica Neue', sans-serif
    pointer-events none
    &.node-label
      text-anchor middle
      &.id
        font 14px 'Helvetica Neue', sans-serif
        font-weight bold

  rect.selection-box
    stroke #fff
    stroke-width 2
    stroke-dasharray 6, 8
    stroke-opacity 0.5
    fill none
