html(lang='en')
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  meta(name='viewport', content='width=device-width')
  title vphi

  // Online/Offline
  // link(href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css', rel='stylesheet', type='text/css')
  link(href='/lib/bootstrap.css', rel='stylesheet', type='text/css')

  link(href='/vphi.css', rel='stylesheet', type='text/css')
body
  .container
    .row.clearfix
      .col-sm-6.column
        h1 Network
      .col-sm-6.column
        h1 Conceptual structure
    .row.clearfix
      .col-sm-6.column
        .row.clearfix
          .col-xs-12.column
            #network-container
        .row.clearfix
          .col-xs-12.column
            .control-panel.btn-toolbar(role='toolbar')
              .btn-group
                button#choose-past-state.btn.btn-lg.btn-primary.dropdown-toggle(type='button', data-toggle='dropdown', aria-expanded='false')
                  | Past State &nbsp;
                  span.caret
                ul#possible-past-states.dropdown-menu(role='menu')
                  li
                    strong A, B, C
              button#selected-past-state.btn.btn-lg.btn-default.disabled
                | 1, 1, 0
      .col-sm-6.column
        .row.clearfix
          .col-xs-12.column
            #concept-space-container
              #concept-space-overlay.hidden &nbsp;
            #concept-space-loading-spinner.hidden
              .tetrominos
                .tetromino.box1
                .tetromino.box2
                .tetromino.box3
                .tetromino.box4
        .row.clearfix
          .col-xs-12.column
            .control-panel.btn-toolbar(role='toolbar')
              .btn-group.pull-right
                button#reset-camera.btn.btn-primary(type='button')
                  | Reset Camera
                button#switch-view.btn.btn-primary(type='button')
                  | Switch View
                button#toggle-grids.btn.btn-primary(type='button')
                  | Toggle Grids
    .row.clearfix
      .col-xs-12.column
        .control-panel.btn-toolbar(role='toolbar')
          .btn-group.pull-right
            button#btn-calculate.btn.btn-lg.btn-primary(type='button', data-loading-text='Calculating…')
              | Calculate Φ
            button#output-phi.btn.btn-lg.btn-default.disabled
              | ···
        
